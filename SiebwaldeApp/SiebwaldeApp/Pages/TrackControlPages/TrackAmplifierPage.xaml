<local:BasePage x:TypeArguments="local:TrackAmplifierPageViewModel"
                x:Class="SiebwaldeApp.TrackAmplifierPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:SiebwaldeApp"
                mc:Ignorable="d"
                d:DesignHeight="803"
                d:DesignWidth="1920"
                Title="TrackAmplifierPage">

    <!-- Outer ScrollViewer provides vertical + horizontal scrollbars -->
    <ScrollViewer x:Name="MainScrollViewer"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">

        <!-- Root grid that will be scaled for zoom -->
        <Grid Background="#FF101010" Margin="16">
            <Grid.LayoutTransform>
                <!-- Zoom transform (controlled from code-behind) -->
                <ScaleTransform x:Name="ZoomTransform"
                                ScaleX="1.0"
                                ScaleY="1.0" />
            </Grid.LayoutTransform>

            <Border BorderThickness="2"
                    BorderBrush="Gray"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Modbus master box -->
                        <RowDefinition Height="Auto" />
                        <!-- 50 amplifiers -->
                        <RowDefinition Height="*" />
                        <!-- Backplane slaves 51-55 -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Modbus Master box at the top (outside the amplifier grid, but inside the border) -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,12">
                        <Border Width="160"
                                Height="100"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="LightGray"
                                Background="#FF202020"
                                Padding="8">
                            <StackPanel>
                                <TextBlock Text="Modbus Master"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Foreground="White" />

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,8,0,0">
                                    <!-- Green/Red LED for master connectivity -->
                                    <Border Width="14"
                                            Height="14"
                                            CornerRadius="7">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Red" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Master.IsConnected}"
                                                                 Value="True">
                                                        <Setter Property="Background" Value="LimeGreen" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <TextBlock Text="{Binding Master.StatusText}"
                                               Margin="6,0,0,0"
                                               Foreground="White"
                                               FontSize="12" />
                                </StackPanel>

                                <TextBlock Text="{Binding Master.SummaryText}"
                                           FontSize="11"
                                           Foreground="LightGray"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 50 Track Amplifiers in a grid inside the border -->
                    <!-- NOTE: no inner ScrollViewer here; outer ScrollViewer handles scrolling -->
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Amplifiers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- 10 columns x 5 rows = 50 amplifiers -->
                                <UniformGrid Columns="10" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="4"
                Padding="6"
                BorderThickness="1"
                CornerRadius="4"
                BorderBrush="DarkGray"
                Background="#FF202020"
                MouseLeftButtonUp="AmplifierBox_MouseLeftButtonUp">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <!-- Header row (Amp number + LEDs) -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Controls (PWM + EmStop) -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Compact status (Mb summary) -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Expanded details -->
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Amplifier number + LEDs -->
                                        <StackPanel Grid.Row="0"
                            Orientation="Horizontal">
                                            <TextBlock Text="{Binding SlaveNumber, StringFormat='Amp {0}'}"
                               FontWeight="Bold"
                               Foreground="White"
                               FontSize="12" />

                                            <!-- Slave-detected LED (green/red) -->
                                            <Border Width="10"
                            Height="10"
                            Margin="6,0,0,0"
                            CornerRadius="5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Red" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDetected}"
                                                 Value="True">
                                                                <Setter Property="Background" Value="LimeGreen" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <!-- Occupied LED (off / yellow) -->
                                            <Border Width="10"
                            Height="10"
                            Margin="4,0,0,0"
                            CornerRadius="5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="DimGray" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsOccupied}"
                                                 Value="True">
                                                                <Setter Property="Background" Value="Yellow" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </StackPanel>

                                        <!-- PWM setpoint + EmStop (main controls) -->
                                        <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Margin="0,4,0,0">
                                            <TextBlock Text="PWM"
                               Foreground="LightGray"
                               FontSize="10"
                               VerticalAlignment="Center" />
                                            <Slider Minimum="0"
                            Maximum="799"
                            Width="80"
                            Margin="4,0,0,0"
                            Value="{Binding PwmSetpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <TextBox Text="{Binding PwmSetpoint, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="40"
                             Margin="4,0,0,0"
                             FontSize="10"
                             VerticalContentAlignment="Center" />

                                            <ToggleButton Content="Em Stop"
                                  Margin="8,0,0,0"
                                  FontSize="10"
                                  Padding="4,1"
                                  IsChecked="{Binding EmoStop, Mode=TwoWay}">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Background" Value="#FF404040" />
                                                        <Setter Property="Foreground" Value="White" />
                                                        <Setter Property="BorderBrush" Value="DarkGray" />
                                                        <Setter Property="BorderThickness" Value="1" />
                                                        <Style.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter Property="Background" Value="Red" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                        </StackPanel>

                                        <!-- Compact Modbus summary -->
                                        <TextBlock Grid.Row="2"
                           Text="{Binding MbSummary}"
                           Margin="0,4,0,0"
                           Foreground="LightGray"
                           FontSize="10"
                           TextWrapping="Wrap" />

                                        <!-- Expanded details: all remaining parameters -->
                                        <StackPanel Grid.Row="3"
                            Margin="0,4,0,0">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <!-- Bind to the page view model's IsExpanded -->
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <Binding Path="DataContext.IsExpanded"
                                                 RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>

                                            <TextBlock Text="{Binding HoldingRegSummary}"
                               Foreground="LightGray"
                               FontSize="9"
                               Margin="0,0,0,2" />

                                            <!-- Running parameters -->
                                            <TextBlock Text="{Binding SetBemfSpeed, StringFormat='Set BEMF speed: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding SetCsReg, StringFormat='CSReg enabled: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding ClearAmpStatus, StringFormat='Clear amp status: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding ClearMessageBuffer, StringFormat='Clear msg buffer: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding EnableAmplifier, StringFormat='Amplifier enabled: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />

                                            <TextBlock Text="{Binding ReadBackEmf, StringFormat='Back EMF: {0}'}"
                               Foreground="LightGray"
                               FontSize="9"
                               Margin="0,2,0,0" />
                                            <TextBlock Text="{Binding ThermalFlag, StringFormat='Thermal flag: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding OverCurrent, StringFormat='Over current: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding AmplifierIdSet, StringFormat='Amp ID set: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />

                                            <TextBlock Text="{Binding AmplifierStatus, StringFormat='Amplifier status: 0x{0:X4}'}"
                               Foreground="LightGray"
                               FontSize="9"
                               Margin="0,2,0,0" />

                                            <TextBlock Text="{Binding HBridgeFuseVoltage, StringFormat='H-bridge fuse V: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding HBridgeTemperature, StringFormat='H-bridge temp: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding HBridgeCurrent, StringFormat='H-bridge current: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />

                                            <TextBlock Text="{Binding MessagesReceived, StringFormat='Msgs received: {0}'}"
                               Foreground="LightGray"
                               FontSize="9"
                               Margin="0,2,0,0" />
                                            <TextBlock Text="{Binding MessagesSent, StringFormat='Msgs sent: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />

                                            <!-- Config parameters -->
                                            <TextBlock Text="{Binding AmplifierId, StringFormat='Amplifier ID: {0}'}"
                               Foreground="LightGray"
                               FontSize="9"
                               Margin="0,2,0,0" />
                                            <TextBlock Text="{Binding SinglePwmMode, StringFormat='Single PWM mode: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />
                                            <TextBlock Text="{Binding ResetSlave, StringFormat='Reset slave: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />

                                            <TextBlock Text="{Binding AccelerationPar, StringFormat='Acceleration: {0}'}"
                               Foreground="LightGray"
                               FontSize="9"
                               Margin="0,2,0,0" />
                                            <TextBlock Text="{Binding DecelerationPar, StringFormat='Deceleration: {0}'}"
                               Foreground="LightGray"
                               FontSize="9" />

                                            <TextBlock Text="{Binding HexChecksum, StringFormat='HEX checksum: 0x{0:X4}'}"
                               Foreground="LightGray"
                               FontSize="9"
                               Margin="0,2,0,0" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>


                    </ItemsControl>

                    <!-- Backplane slaves 51-55 at the bottom, smaller boxes -->
                    <StackPanel Grid.Row="2"
                                Margin="0,12,0,0">
                        <TextBlock Text="Backplane slaves 51-55"
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="White"
                                   Margin="0,0,0,4" />

                        <ItemsControl ItemsSource="{Binding BackplaneSlaves}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2"
                                            Padding="4"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            BorderBrush="DarkGray"
                                            Background="#FF202020">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding SlaveNumber, StringFormat='BP {0}'}"
                                                       Foreground="White"
                                                       FontSize="10" />

                                            <!-- Smaller LED -->
                                            <Border Width="8"
                                                    Height="8"
                                                    Margin="4,0,0,0"
                                                    CornerRadius="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Red" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDetected}"
                                                                         Value="True">
                                                                <Setter Property="Background" Value="LimeGreen" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock Text="{Binding MbSummary}"
                                                       Margin="4,0,0,0"
                                                       Foreground="LightGray"
                                                       FontSize="9"
                                                       TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</local:BasePage>
