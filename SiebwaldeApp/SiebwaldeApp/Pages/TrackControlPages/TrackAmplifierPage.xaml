<local:BasePage x:TypeArguments="local:TrackAmplifierPageViewModel"
                x:Class="SiebwaldeApp.TrackAmplifierPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:SiebwaldeApp"
                mc:Ignorable="d"
                d:DesignHeight="803"
                d:DesignWidth="1920"
                Title="TrackAmplifierPage">

    <!-- Outer ScrollViewer provides vertical + horizontal scrollbars -->
    <ScrollViewer x:Name="MainScrollViewer"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">

        <!-- Root grid that will be scaled for zoom -->
        <Grid Background="#FF101010" Margin="16">
            <Grid.LayoutTransform>
                <!-- Zoom transform (controlled from code-behind) -->
                <ScaleTransform x:Name="ZoomTransform"
                                ScaleX="1.0"
                                ScaleY="1.0" />
            </Grid.LayoutTransform>

            <Border BorderThickness="2"
                    BorderBrush="Gray"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Modbus master box -->
                        <RowDefinition Height="Auto" />
                        <!-- 50 amplifiers -->
                        <RowDefinition Height="*" />
                        <!-- Backplane slaves 51-55 -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Modbus Master box at the top (outside the amplifier grid, but inside the border) -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,12">
                        <Border Width="160"
                                Height="100"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="LightGray"
                                Background="#FF202020"
                                Padding="8">
                            <StackPanel>
                                <TextBlock Text="Modbus Master"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Foreground="White" />

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,8,0,0">
                                    <!-- Green/Red LED for master connectivity -->
                                    <Border Width="14"
                                            Height="14"
                                            CornerRadius="7">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Red" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Master.IsConnected}"
                                                                 Value="True">
                                                        <Setter Property="Background" Value="LimeGreen" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <TextBlock Text="{Binding Master.StatusText}"
                                               Margin="6,0,0,0"
                                               Foreground="White"
                                               FontSize="12" />
                                </StackPanel>

                                <TextBlock Text="{Binding Master.SummaryText}"
                                           FontSize="11"
                                           Foreground="LightGray"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 50 Track Amplifiers in a grid inside the border -->
                    <!-- NOTE: no inner ScrollViewer here; outer ScrollViewer handles scrolling -->
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Amplifiers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- 10 columns x 5 rows = 50 amplifiers -->
                                <UniformGrid Columns="10" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="4"
                    Padding="6"
                    BorderThickness="1"
                    CornerRadius="4"
                    BorderBrush="DarkGray"
                    Background="#FF202020"
                    MouseLeftButtonUp="AmplifierBorder_MouseLeftButtonUp">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="MinHeight" Value="70" />
                                            <Style.Triggers>
                                                <!-- Make all amplifier boxes higher in expanded mode -->
                                                <DataTrigger Value="True">
                                                    <DataTrigger.Binding>
                                                        <Binding Path="DataContext.AreAmplifiersExpanded"
                                             RelativeSource="{RelativeSource AncestorType=local:TrackAmplifierPage}" />
                                                    </DataTrigger.Binding>
                                                    <Setter Property="MinHeight" Value="130" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <!-- Header row (Amp number + detected LED) -->
                                            <RowDefinition Height="Auto" />
                                            <!-- PWM + EmStop controls -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Occupied indicator -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Modbus counter summary -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Full register summary (only visible in expanded mode) -->
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Row 0: Amplifier number + detected LED -->
                                        <StackPanel Grid.Row="0"
                                Orientation="Horizontal">
                                            <TextBlock Text="{Binding SlaveNumber, StringFormat='Amp {0}'}"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="12" />

                                            <!-- Detected LED: green when slave is detected -->
                                            <Border Width="10"
                                Height="10"
                                Margin="6,0,0,0"
                                CornerRadius="5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Red" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDetected}"
                                                     Value="True">
                                                                <Setter Property="Background" Value="LimeGreen" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </StackPanel>

                                        <!-- Row 1: PWM set point + EmStop control -->
                                        <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="0,4,0,0">
                                            <TextBlock Text="PWM:"
                                   Foreground="LightGray"
                                   FontSize="10" />
                                            <TextBox Text="{Binding PwmSetPoint, UpdateSourceTrigger=PropertyChanged}"
                                 Width="40"
                                 Margin="4,0,0,0"
                                 FontSize="10"
                                 HorizontalContentAlignment="Right" />

                                            <CheckBox IsChecked="{Binding IsEmStop}"
                                  Content="Em Stop"
                                  Margin="8,0,0,0"
                                  Foreground="LightGray"
                                  FontSize="10"
                                  VerticalAlignment="Center" />
                                        </StackPanel>

                                        <!-- Row 2: Occupied indicator -->
                                        <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0,4,0,0">
                                            <TextBlock Text="Occupied:"
                                   Foreground="LightGray"
                                   FontSize="10" />
                                            <Border Width="10"
                                Height="10"
                                Margin="4,0,0,0"
                                CornerRadius="5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#404040" />
                                                        <Style.Triggers>
                                                            <!-- Yellow LED when occupied -->
                                                            <DataTrigger Binding="{Binding IsOccupied}"
                                                     Value="True">
                                                                <Setter Property="Background" Value="Yellow" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </StackPanel>

                                        <!-- Row 3: Modbus counter summary (always visible) -->
                                        <TextBlock Grid.Row="3"
                               Text="{Binding MbSummary}"
                               Margin="0,4,0,0"
                               Foreground="LightGray"
                               FontSize="9"
                               TextWrapping="Wrap" />

                                        <!-- Row 4: full holding register summary (only in expanded mode) -->
                                        <TextBlock Grid.Row="4"
                               Text="{Binding AllHoldingRegsSummary}"
                               Margin="0,4,0,0"
                               Foreground="LightGray"
                               FontSize="8"
                               TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <Binding Path="DataContext.AreAmplifiersExpanded"
                                                     RelativeSource="{RelativeSource AncestorType=local:TrackAmplifierPage}" />
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>

                    <!-- Backplane slaves 51-55 at the bottom, smaller boxes -->
                    <StackPanel Grid.Row="2"
                                Margin="0,12,0,0">
                        <TextBlock Text="Backplane slaves 51-55"
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="White"
                                   Margin="0,0,0,4" />

                        <ItemsControl ItemsSource="{Binding BackplaneSlaves}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2"
                                            Padding="4"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            BorderBrush="DarkGray"
                                            Background="#FF202020">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding SlaveNumber, StringFormat='BP {0}'}"
                                                       Foreground="White"
                                                       FontSize="10" />

                                            <!-- Smaller LED -->
                                            <Border Width="8"
                                                    Height="8"
                                                    Margin="4,0,0,0"
                                                    CornerRadius="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Red" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDetected}"
                                                                         Value="True">
                                                                <Setter Property="Background" Value="LimeGreen" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock Text="{Binding MbSummary}"
                                                       Margin="4,0,0,0"
                                                       Foreground="LightGray"
                                                       FontSize="9"
                                                       TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</local:BasePage>
