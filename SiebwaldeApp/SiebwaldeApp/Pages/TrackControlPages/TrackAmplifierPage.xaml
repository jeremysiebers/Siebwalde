<local:BasePage x:TypeArguments="local:TrackAmplifierPageViewModel"
                x:Class="SiebwaldeApp.TrackAmplifierPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:SiebwaldeApp"
                mc:Ignorable="d"
                d:DesignHeight="803"
                d:DesignWidth="1920"
                Title="TrackAmplifierPage">

    <!-- Outer ScrollViewer provides vertical + horizontal scrollbars -->
    <ScrollViewer x:Name="MainScrollViewer"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">

        <!-- Root grid that will be scaled for zoom -->
        <Grid Background="#FF101010" Margin="16">
            <Grid.LayoutTransform>
                <!-- Zoom transform (controlled from code-behind) -->
                <ScaleTransform x:Name="ZoomTransform"
                                ScaleX="1.0"
                                ScaleY="1.0" />
            </Grid.LayoutTransform>

            <Border BorderThickness="2"
                    BorderBrush="Gray"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Modbus master box -->
                        <RowDefinition Height="Auto" />
                        <!-- 50 amplifiers -->
                        <RowDefinition Height="*" />
                        <!-- Backplane slaves 51-55 -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Modbus Master box at the top (outside the amplifier grid, but inside the border) -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,12">
                        <Border Width="160"
                                Height="100"
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="LightGray"
                                Background="#FF202020"
                                Padding="8">
                            <StackPanel>
                                <TextBlock Text="Modbus Master"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           HorizontalAlignment="Center"
                                           Foreground="White" />

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="0,8,0,0">
                                    <!-- Green/Red LED for master connectivity -->
                                    <Border Width="14"
                                            Height="14"
                                            CornerRadius="7">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Red" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Master.IsConnected}"
                                                                 Value="True">
                                                        <Setter Property="Background" Value="LimeGreen" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <TextBlock Text="{Binding Master.StatusText}"
                                               Margin="6,0,0,0"
                                               Foreground="White"
                                               FontSize="12" />
                                </StackPanel>

                                <TextBlock Text="{Binding Master.SummaryText}"
                                           FontSize="11"
                                           Foreground="LightGray"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,0" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- 50 Track Amplifiers in a grid inside the border -->
                    <!-- NOTE: no inner ScrollViewer here; outer ScrollViewer handles scrolling -->
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Amplifiers}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- 10 columns x 5 rows = 50 amplifiers -->
                                <UniformGrid Columns="10" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="4"
                                        Padding="6"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        BorderBrush="DarkGray"
                                        Background="#FF202020">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <!-- Header row (Amp number + LED) -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Modbus counters -->
                                            <RowDefinition Height="Auto" />
                                            <!-- Holding registers summary -->
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Amplifier number + LED -->
                                        <StackPanel Grid.Row="0"
                                                    Orientation="Horizontal">
                                            <TextBlock Text="{Binding SlaveNumber, StringFormat='Amp {0}'}"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       FontSize="12" />

                                            <Border Width="10"
                                                    Height="10"
                                                    Margin="6,0,0,0"
                                                    CornerRadius="5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Red" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDetected}"
                                                                         Value="True">
                                                                <Setter Property="Background" Value="LimeGreen" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </StackPanel>

                                        <!-- Modbus counter summary -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding MbSummary}"
                                                   Margin="0,4,0,0"
                                                   Foreground="LightGray"
                                                   FontSize="10"
                                                   TextWrapping="Wrap" />

                                        <!-- Holding registers summary -->
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding HoldingRegSummary}"
                                                   Margin="0,4,0,0"
                                                   Foreground="LightGray"
                                                   FontSize="9"
                                                   TextWrapping="Wrap" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Backplane slaves 51-55 at the bottom, smaller boxes -->
                    <StackPanel Grid.Row="2"
                                Margin="0,12,0,0">
                        <TextBlock Text="Backplane slaves 51-55"
                                   FontWeight="Bold"
                                   FontSize="12"
                                   Foreground="White"
                                   Margin="0,0,0,4" />

                        <ItemsControl ItemsSource="{Binding BackplaneSlaves}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2"
                                            Padding="4"
                                            BorderThickness="1"
                                            CornerRadius="3"
                                            BorderBrush="DarkGray"
                                            Background="#FF202020">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding SlaveNumber, StringFormat='BP {0}'}"
                                                       Foreground="White"
                                                       FontSize="10" />

                                            <!-- Smaller LED -->
                                            <Border Width="8"
                                                    Height="8"
                                                    Margin="4,0,0,0"
                                                    CornerRadius="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Red" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsDetected}"
                                                                         Value="True">
                                                                <Setter Property="Background" Value="LimeGreen" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock Text="{Binding MbSummary}"
                                                       Margin="4,0,0,0"
                                                       Foreground="LightGray"
                                                       FontSize="9"
                                                       TextWrapping="NoWrap" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</local:BasePage>
