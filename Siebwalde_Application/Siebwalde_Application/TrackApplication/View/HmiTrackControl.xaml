<UserControl x:Class="Siebwalde_Application.HmiTrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Siebwalde_Application"
             mc:Ignorable="d" 
             d:DesignHeight="542" d:DesignWidth="1081" >
    <DockPanel >
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Automatic Mode" IsCheckable="True" IsChecked="True"  />
                <MenuItem Header="_Manual Mode" IsCheckable="True" IsChecked="False"  />
                <MenuItem Header="_Exit" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_TrackAmp Manual Mode" IsEnabled="True" Command="{Binding ShowTrackAmplifierWindowCommand}"  />
            </MenuItem>
        </Menu>

        <Grid >
            <Frame x:Name="MainFrame" Content="{Binding CurrentPage, Converter={local:ApplicationPageValueConverter}}" />
        </Grid>        
    </DockPanel>
</UserControl>
