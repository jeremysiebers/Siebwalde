<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <!-- Keep your original names -->
    <RootNamespace>SiebwaldeApp.Core</RootNamespace>
    <AssemblyName>SiebwaldeApp.Core</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Model\TrackApplication\**" />
    <EmbeddedResource Remove="Model\TrackApplication\**" />
    <None Remove="Model\TrackApplication\**" />
  </ItemGroup>

  <!-- NuGet packages (replaces old <Reference> + HintPath) -->
  <ItemGroup>
    <PackageReference Include="Ninject" Version="3.3.6" />
    <PackageReference Include="Fody" Version="6.8.0" PrivateAssets="all" />
    <PackageReference Include="PropertyChanged.Fody" Version="4.1.0" />
    <!-- If you use ConfigurationManager (AppSettings/ConnectionStrings), keep this: -->
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="8.0.0" />
  </ItemGroup>

  <!-- Preserve Settings designer behavior -->
  <ItemGroup>
    <None Update="Properties\CoreSettings.settings">
      <Generator>PublicSettingsSingleFileGenerator</Generator>
      <LastGenOutput>CoreSettings.Designer.cs</LastGenOutput>
    </None>
    <Compile Update="Properties\CoreSettings.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <DependentUpon>CoreSettings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <!-- Optional: include app.config as content (note: not used by .NET 8 runtime, but harmless) -->
  <ItemGroup>
    <None Include="app.config" Condition="Exists('app.config')" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="PropertyChanged">
      <HintPath>..\packages\PropertyChanged.Fody.4.1.0\lib\net40\PropertyChanged.dll</HintPath>
    </Reference>
  </ItemGroup>

  <!-- Configuration-specific constants (SDK has sensible defaults for the rest) -->
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>
</Project>
